<div class="pagination clearfix" role="navigation">
    {{#if next}}
    <a class="older-posts" href="{{page_url next}}" title="Older"><span>Anterior</span> <i class="fa fa-long-arrow-right"></i></a>
    {{else}}
    <a class="older-posts disable" href="javascript:;"><span>Anterior</span> <i class="fa fa-long-arrow-right"></i></a>
    {{/if}}        
    <span class="page-number">Pagina {{page}} de <span class="total-page">{{pages}}</span></span>
    {{#if prev}}
    <a class="newer-posts" href="{{page_url prev}}" title="Newer"><i class="fa fa-long-arrow-left"></i> <span>Nuevo</span></a>
    {{else}}
    <a class="newer-posts disable" href="javascript:;"><i class="fa fa-long-arrow-left"></i> <span>Nuevo</span></a>
    {{/if}}
</div>